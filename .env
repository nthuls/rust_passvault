# Encryption Settings
# KDF_MEMORY_COST: Memory cost for Argon2 (in KB, default: 65536)
KDF_MEMORY_COST=65536
# KDF_TIME_COST: Time cost for Argon2 (default: 3)
KDF_TIME_COST=3
# KDF_PARALLELISM: Parallelism factor for Argon2 (default: 4)
KDF_PARALLELISM=4

# Password Generation Defaults
# DEFAULT_PASSWORD_LENGTH: Default length for generated passwords (default: 16)
DEFAULT_PASSWORD_LENGTH=16
# DEFAULT_PASSWORD_EXCLUDE_SIMILAR: Exclude similar characters by default (default: true)
DEFAULT_PASSWORD_EXCLUDE_SIMILAR=true

# Application Settings
# AUTO_LOCK_TIMEOUT: Minutes of inactivity before vault locks (0 to disable, default: 5)
AUTO_LOCK_TIMEOUT=5
# MAX_FAILED_ATTEMPTS: Max failed password attempts before cooldown (default: 5)
MAX_FAILED_ATTEMPTS=5
# FAILED_ATTEMPT_COOLDOWN: Cooldown period in seconds after max failed attempts (default: 300)
FAILED_ATTEMPT_COOLDOWN=300

# Backup Settings
# AUTO_BACKUP: Enable automatic backups (default: true)
AUTO_BACKUP=true
# BACKUP_DIRECTORY: Directory for automatic backups (default: ./backups)
BACKUP_DIRECTORY=./backups
# BACKUP_INTERVAL_DAYS: Days between automatic backups (default: 7)
BACKUP_INTERVAL_DAYS=7
# KEEP_BACKUPS: Number of backups to keep (default: 5)
KEEP_BACKUPS=5

# Firefox Integration
# FIREFOX_PROFILE_PATHS: Additional Firefox profile paths to search (comma-separated)
FIREFOX_PROFILE_PATHS=

# Logging
# LOG_LEVEL: Logging level (error, warn, info, debug, trace, default: info)
LOG_LEVEL=info
# LOG_FILE: Log file path (default: ./rust_passvault.log)
LOG_FILE=./rust_passvault.log

RUST_LOG=debug

